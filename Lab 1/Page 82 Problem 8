#include <iostream>
#include <string>

using namespace std;

int main()
{
	float Item1;
	float Item2;
	float Item3;
	float Item4;
	float Item5;
	float Subtotal;
	float Tax;
	float Total;

	Item1 = 15.95;
	Item2 = 24.95;
	Item3 = 6.95;
	Item4 = 12.95;
	Item5 = 3.95;
	Subtotal = Item1 + Item2 + Item3 + Item4 + Item5;
	Tax = Subtotal * 0.07;
	Total = Subtotal + Tax;

	cout << "Price of Item 1 is: $" << Item1 << endl;
	cout << "Price of Item 2 is: $" << Item2 << endl;
	cout << "Price of Item 3 is: $" << Item3 << endl;
	cout << "Price of Item 4 is: $" << Item4 << endl;
	cout << "Price of Item 5 is: $" << Item5 << endl;
	cout << "The subtotal of the sale is: $" << Subtotal << endl;
	cout << "The amount of sales tax is: $" << Tax << endl;
	cout << "The total is: $" << Total << endl;

	return 0;
}
/*
Price of Item 1 is: $15.95
Price of Item 2 is: $24.95
Price of Item 3 is: $6.95
Price of Item 4 is: $12.95
Price of Item 5 is: $3.95
The subtotal of the sale is: $64.75
The amount of sales tax is: $4.5325
The total is: $69.2825
*/
