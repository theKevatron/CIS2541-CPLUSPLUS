//Energy Drink Consumption
#include <iostream>

using namespace std;

int main()
{
	float Customers;
	float Energy1;
	float Citrus;

	Customers = 16500;
	Energy1 = Customers * 0.15;
	Citrus = Energy1 * 0.58;

	cout << "Total number of customers in the survey: " << Customers << endl;
	cout << "Number of customers who purchase 1 or more energy drinks per week: " << Energy1 << endl;
	cout << "Number of customers who prefer citrus flavored drinks: " << Citrus << endl;

	return 0;
}
/*
Total number of customers in the survey: 16500
Number of customers who purchase 1 or more energy drinks per week: 2475
Number of customers who prefer citrus flavored drinks: 1435.5
*/
